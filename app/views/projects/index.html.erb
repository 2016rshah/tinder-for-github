<p id="notice"><%= notice %></p>

<h1>Listing Projects That You Have Not Starred</h1>
<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects_unstarred.each do |project| %>
      <tr>
        <td><%= project.username %></td>
        <td><%= project.title %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Star', 'projects/'+project.id.to_s+'/star', method: :star %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

